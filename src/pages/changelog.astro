---
import Navbar from '../components/Navbar.astro';
import changelog from '../data/changelog.json';
import '../styles/global.css';

// Group commits by date
const groupedChangelog = changelog.reduce((acc: Record<string, typeof changelog>, commit) => {
  if (!acc[commit.date]) {
    acc[commit.date] = [];
  }
  acc[commit.date].push(commit);
  return acc;
}, {});

const sortedDates = Object.keys(groupedChangelog).sort((a, b) => new Date(b).getTime() - new Date(a).getTime());
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/ai-vault.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Changelog - AIVault</title>
	</head>
	<body class="bg-gray-50 min-h-screen flex flex-col">
        <Navbar />
		<main class="container mx-auto py-12 px-4 max-w-4xl flex-grow">
			<header class="mb-12 text-center">
                <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-4">Components Changelog</h1>
                <p class="text-gray-600">Latest updates to the component library</p>
            </header>
            
            <div class="space-y-12">
                {sortedDates.length === 0 && (
                    <div class="text-center text-gray-500 py-12 bg-white rounded-xl shadow-sm border border-gray-100">
                        <p>No changes detected yet.</p>
                        <p class="text-sm mt-2">Commits to the <code>components_repo</code> folder will appear here.</p>
                    </div>
                )}

                {sortedDates.map(date => (
                    <div class="relative pl-8 border-l-2 border-blue-100">
                        <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-blue-500 border-4 border-white shadow-sm"></div>
                        <h2 class="text-xl font-bold text-gray-900 mb-6">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</h2>
                        
                        <div class="space-y-6">
                            {groupedChangelog[date].map(commit => (
                                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                                    <div class="flex justify-between items-start mb-4">
                                        <div>
                                            <p class="text-gray-900 font-medium text-lg">{commit.message}</p>
                                            <p class="text-sm text-gray-500 mt-1">
                                                Updated by <span class="font-semibold text-gray-700">{commit.author}</span>
                                            </p>
                                        </div>
                                        <span class="text-xs font-mono bg-gray-100 text-gray-600 px-2 py-1 rounded">
                                            {commit.hash.substring(0, 7)}
                                        </span>
                                    </div>

                                    <div class="space-y-3">
                                        {commit.components.map(comp => (
                                            <div class="flex items-center gap-3 bg-blue-50 p-3 rounded-lg">
                                                <div class="flex-1">
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-blue-900">{comp.name}</span>
                                                        {comp.version && (
                                                            <span class="text-xs bg-blue-200 text-blue-800 px-2 py-0.5 rounded-full">v{comp.version}</span>
                                                        )}
                                                    </div>
                                                    {comp.componentAuthor && (
                                                        <p class="text-xs text-blue-600 mt-0.5">Original Author: {comp.componentAuthor}</p>
                                                    )}
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
		</main>
        
        <div class="fixed bottom-6 left-1/2 -translate-x-1/2 md:left-6 md:translate-x-0 z-50 bg-white/90 backdrop-blur-sm border border-gray-200 shadow-lg rounded-full px-4 py-2 md:px-6 md:py-3 text-gray-800 text-xs md:text-sm font-medium hover:shadow-xl transition-all duration-300 flex items-center gap-2 animate-in slide-in-from-bottom-4 fade-in whitespace-nowrap">
            <span>Made with ❤️ by Students and AI Enthusiasts</span>
        </div>