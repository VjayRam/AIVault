---
import Navbar from '../components/Navbar.astro';
import changelog from '../data/changelog.json';
import '../styles/global.css';

// Group commits by date
const groupedChangelog = changelog.reduce((acc: Record<string, typeof changelog>, commit) => {
  if (!acc[commit.date]) {
    acc[commit.date] = [];
  }
  acc[commit.date].push(commit);
  return acc;
}, {});

const sortedDates = Object.keys(groupedChangelog).sort((a, b) => new Date(b).getTime() - new Date(a).getTime());
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/ai-vault.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Changelog - AIVault</title>
	</head>
	<body class="bg-white dark:bg-[#1F1F21] min-h-screen flex flex-col transition-colors duration-300">
        <Navbar />
		<main class="container mx-auto py-12 px-4 max-w-4xl flex-grow">
			<header class="mb-12 text-center">
                <h1 class="text-3xl md:text-4xl font-extrabold text-[#1F1F21] dark:text-[#FE3203] mb-4">Components Changelog</h1>
                <p class="text-gray-600 dark:text-white">Latest updates to the component library</p>
            </header>
            
            <div class="space-y-12">
                {sortedDates.length === 0 && (
                    <div class="text-center text-gray-500 dark:text-white py-12 bg-white dark:bg-[#1F1F21] rounded-xl shadow-sm border border-gray-100 dark:border-[#FE3203]">
                        <p>No changes detected yet.</p>
                        <p class="text-sm mt-2">Commits to the <code>components_repo</code> folder will appear here.</p>
                    </div>
                )}

                {sortedDates.map(date => (
                    <div class="relative pl-8 border-l-2 border-orange-100 dark:border-[#FE3203]">
                        <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-[#FE3203] border-4 border-white dark:border-[#1F1F21] shadow-sm"></div>
                        <h2 class="text-xl font-bold text-[#1F1F21] dark:text-[#FE3203] mb-6">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</h2>
                        
                        <div class="space-y-6">
                            {groupedChangelog[date].map(commit => (
                                <div class="bg-white dark:bg-[#1F1F21] p-6 rounded-xl shadow-md border border-gray-300 dark:border-[#FE3203] hover:shadow-lg transition-shadow">
                                    <div class="flex justify-between items-start mb-4">
                                        <div>
                                            <p class="text-[#1F1F21] dark:text-[#FE3203] font-medium text-lg">{commit.message}</p>
                                            <p class="text-sm text-gray-500 dark:text-white/80 mt-1">
                                                Updated by <span class="font-semibold text-gray-700 dark:text-white">{commit.author}</span>
                                            </p>
                                        </div>
                                        <span class="text-xs font-mono bg-gray-100 dark:bg-[#2A2A2D] text-gray-600 dark:text-[#FE3203] px-2 py-1 rounded">
                                            {commit.hash.substring(0, 7)}
                                        </span>
                                    </div>

                                    <div class="space-y-3">
                                        {commit.components.map(comp => (
                                            <div class="flex items-center gap-3 bg-orange-100 dark:bg-[#2A2A2D] p-3 rounded-lg border border-orange-300 dark:border-[#FE3203]">
                                                <div class="flex-1">
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-[#FE3203] dark:text-white">{comp.name}</span>
                                                        {comp.version && (
                                                            <span class="text-xs bg-[#FE3203]/20 text-[#FE3203] dark:bg-[#FE3203] dark:text-white px-2 py-0.5 rounded-full">v{comp.version}</span>
                                                        )}
                                                    </div>
                                                    {comp.componentAuthor && (
                                                        <p class="text-xs text-[#FE3203] dark:text-white mt-0.5">Original Author: {comp.componentAuthor}</p>
                                                    )}
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
		</main>
        
        <footer class="bg-white dark:bg-[#1F1F21] border-t border-gray-100 dark:border-[#FE3203] py-8 mt-12 transition-colors duration-300">
            <div class="container mx-auto px-4 text-center text-gray-400 dark:text-white text-sm">
                &copy; {new Date().getFullYear()} AIVault. All rights reserved.
            </div>
        </footer>

        <div class="fixed bottom-6 left-1/2 -translate-x-1/2 md:left-6 md:translate-x-0 z-50 bg-white/90 dark:bg-[#1F1F21]/90 backdrop-blur-sm border border-gray-200 dark:border-[#FE3203] shadow-lg rounded-full px-4 py-2 md:px-6 md:py-3 text-[#1F1F21] dark:text-[#FE3203] text-xs md:text-sm font-medium hover:shadow-xl transition-all duration-300 flex items-center gap-2 animate-in slide-in-from-bottom-4 fade-in whitespace-nowrap">
            <span>Made with ❤️ by Students and AI Enthusiasts</span>
        </div>
	</body>
</html>