---
import ComponentSearch from '../components/ComponentSearch';
import Navbar from '../components/Navbar.astro';
import components from '../data/components.json';
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/ai-vault.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>AIVault - AI Component Directory</title>
	</head>
	<body class="bg-gray-50 min-h-screen flex flex-col">
		<Navbar />
		<main class="container mx-auto py-12 px-4 flex-grow">
			<header class="text-center mb-12">
				<h1 class="text-4xl font-extrabold text-gray-900 mb-4">
					AIVault Directory
				</h1>
				<p class="text-xl text-gray-600">
					Discover and reuse high-quality AI components. Built by students for everyone.
				</p>
			</header>
			
			<ComponentSearch client:load components={components} />
		</main>
		
		<footer class="bg-white border-t border-gray-100 py-8 mt-12">
            <div class="container mx-auto px-4 text-center text-gray-400 text-sm">
                <p>&copy; {new Date().getFullYear()} AIVault. All rights reserved.</p>
            </div>
        </footer>

        <div class="fixed bottom-6 left-6 z-50 bg-white/90 backdrop-blur-sm border border-gray-200 shadow-lg rounded-full px-6 py-3 text-gray-800 text-sm font-medium hover:shadow-xl transition-all duration-300 flex items-center gap-2 animate-in slide-in-from-bottom-4 fade-in">
            <span>Made with ❤️ by Students and AI Enthusiasts</span>
        </div>
	</body>
</html>
