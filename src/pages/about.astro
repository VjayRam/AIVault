---
import Navbar from '../components/Navbar.astro';
import ContributorList from '../components/ContributorList';
import fs from 'fs';
import path from 'path';
import '../styles/global.css';

// Read contributors from CONTRIBUTORS.md
const contributorsFile = path.join(process.cwd(), 'CONTRIBUTORS.md');
let contributors = [];

if (fs.existsSync(contributorsFile)) {
  try {
    const content = fs.readFileSync(contributorsFile, 'utf-8');
    const data = JSON.parse(content);
    
    contributors = data.map(c => ({
      name: c.name,
      role: c.role || 'Contributor',
      location: c.location || null,
      email: c.email || null,
      linkedin: c.linkedin || null
    }));
  } catch (e) {
    console.error("Error parsing CONTRIBUTORS.md:", e);
  }
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/ai-vault.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>About - AIVault</title>
	</head>
	<body class="bg-gray-50 min-h-screen flex flex-col">
        <Navbar />
		<main class="container mx-auto py-12 px-4 max-w-3xl flex-grow">
			<header class="mb-12 text-center">
                <h1 class="text-4xl font-extrabold text-gray-900 mb-4">About AIVault</h1>
                <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
            </header>
            
            <section class="prose prose-lg mb-16 text-gray-600 mx-auto">
                <p class="mb-6 leading-relaxed">
                    <strong class="text-gray-900">AIVault</strong> is a centralized repository for reusable AI components, designed to streamline the development of intelligent applications.
                </p>
                <p class="leading-relaxed">
                    Our goal is to provide developers with high-quality, tested building blocks—from LLM agents to RAG systems—that can be easily integrated into new projects. By fostering a community of sharing and reuse, we aim to accelerate innovation in the AI space and reduce the redundancy of rebuilding common AI patterns.
                </p>
            </section>

            <section>
                <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">Contributors</h2>
                <ContributorList client:load contributors={contributors} />
            </section>

            <section class="mt-16 text-center bg-blue-50 rounded-2xl p-8 border border-blue-100">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Join the Community</h2>
                <p class="text-gray-600 mb-8 max-w-lg mx-auto">
                    We are always looking for new components and improvements. Help us build the best AI resource for everyone.
                </p>
                <a href="/contributing" class="inline-block px-8 py-3 bg-blue-600 text-white font-bold rounded-full hover:bg-blue-700 transition-colors shadow-sm hover:shadow-md">
                    Start Contributing
                </a>
            </section>
		</main>
        
        <footer class="bg-white border-t border-gray-100 py-8 mt-12">
            <div class="container mx-auto px-4 text-center text-gray-400 text-sm">
                &copy; {new Date().getFullYear()} AIVault. All rights reserved.
            </div>
        </footer>
	</body>
</html>